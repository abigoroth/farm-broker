<%= simple_form_for(@bidder) do |f| %>
<%= f.error_notification %>
<div class="row">
  <div class="col-sm-4"></div>
  
  <div class="col-sm-4">
    <div class="well well-lg" >
      <div class="well well-lg" >
        <div class="form-inputs">
          <%= f.input :name %>
          <div class="field">
            <%= f.label 'Date of Birth' %><br />
            <div class='input-group date' id='datetimepicker4'>
              <%= f.text_field :dob, autofocus: true, class:'form-control'%> 
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
              </span>
              <!-- JS script for datetimepicker4 -->
              <script type="text/javascript">
               $(function () {
                 $('#datetimepicker4').datetimepicker(
                 {
                   format: 'YYYY-MM-DD'
                 }
                 );
               });
             </script>
             <!-- JS script for datetimepicker4 -->
           </div></div>
           <br>

           <%= f.input :address %>
           <%= f.input :phone %>
           <!--<%= f.input :credit_card %>-->
         </div>
          <center><div class="actions">
            <%= f.submit 'Create User',class: 'btn btn-lg btn-success btn-sm'%>
          </div></center>
          <% end %>
        </div>
      </div>
    </div>


    <div class="col-sm-4"></div></div>