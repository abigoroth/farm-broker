            <script type="text/javascript">
             $(function () {
                 $('#datetimepicker4').datetimepicker(
                   {
                     format: 'YYYY-MM-DD'
                   }
                 );
             });
            </script>
            <!-- JS script for datetimepicker4 -->
          </div></div>
      <br>

            <%= f.input :address %>
            <%= f.input :phone %>
            <%= f.input :credit_card %>
