<%= simple_form_for(@bidder) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :dob %>
    <%= f.input :address %>
    <%= f.input :phone %>
    <%= f.input :credit_card %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
