<%= simple_form_for [current_user, Wallpost.new], url: wallposts_path, method: :post do |f|%>
  <%= f.error_notification %>



<div class="row">
   <div class="col-sm-3"></div>
      <div class="col-sm-6">.
          
            <div class="panel panel-default">
              <div class="panel-heading"><h3>What's New</h3></div>
             

              <div class="panel-body">   
                <div class="form-inputs">
                  <%= f.input :wall_status ,placeholder: "What you think..." , class:"col-lg-12" %></div>
                
                <div class="form-actions">
                  <%= f.button :submit, class: "btn btn-success pull-right" %>
                </div> <% end %>
              </div>   
          </form>
          </div>
      </div>  
    <div class="col-sm-3"></div>
