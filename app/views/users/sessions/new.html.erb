<div class="container">
  <div class="row">
  <div class="col-md-12">
      <center><h2>Member Sign In</h2></center>

      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
        <div class="panel panel-default" style="padding: 20px">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="field">
              <%= f.label 'Sign Up As:' %><br />
              <%= f.collection_select :role, User::ROLES, :to_s, :humanize, {prompt: "Select a Role"}, class:'form-control' %>
            </div>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, class: 'form-control' %>
            </div>

            <div class="field">
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
            </div>

            <center>
            <br>
            <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>

            <% end -%>

            <div class="actions">
              <%= f.submit "Sign in", class: 'btn btn-md btn-success' %>
            </div>
            </center>
            <% end %>
          

      <%= render "users/shared/links" %>
       </div>
       </div>
      </div>
      </div>
    </div>
  </div>
</div>