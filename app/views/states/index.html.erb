


<p id="notice"><%= notice %></p>

<h1>States</h1>

<table class="table table-striped custab" >
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.name %></td>
        <td><%= link_to 'Show', state %></td>
        <td><%= link_to 'Edit', edit_state_path(state) %></td>
        <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New State', new_state_path %>



<div style='width: 200px;'>
  <div id="multi_markers" style='width: 800px; height: 400px;'></div>
</div>



<script >
var handler = Gmaps.build('Google');
handler.buildMap({ internal: {id: 'multi_markers'}}, function(){
  var markers = handler.addMarkers([
    { lat: 3.0650319, lng: 101.5243395},
  ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});

</script>