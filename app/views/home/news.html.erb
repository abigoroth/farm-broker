<div class="container">
<br>
<div class="row">
  <div class="col-sm-12">
    <h2>What's Happening Now</h2>
  </div>
</div><!-- row 1 -->
<br>
<div class="row">
  <% @bids.each do |bid| %>

  <div class="col-sm-4">
    <% if Time.now > bid.start_time and Time.now < bid.end_time %>
    <div class="panel panel-default">
    <center>
      <%= image_tag bid.produce.avatar.url (:medium)%>
    </center>

    <h4 align="center">Item: <%= bid.produce.producename %><br>
    <font style="color:green"><em> Open Now!</em></font>
    </h4>
    <table class="table" style="height: 200px">
    <tr>
    <th>Created by: </th> <td><%= bid.broker.name %></td>
  </tr>
  <tr>
    <th>Item Weight: </th> <td><%= bid.produce.producequantity %></td>
  </tr>
  <tr>
    <th>Start Time: </th><td><%= bid.start_time %></td>
  </tr>
  <tr>
    <th>End Time: </th> <td><%= bid.end_time %></td>
  </tr>
  <tr>
    <th>Start Price: </th> <td>RM <%= bid.start_price %></td>
  </tr>
  </table>
  </div>
 
 
  <%end%>
  </div>
  <% end %>

</div> <!-- row 2 -->
</div><!-- container -->
