<center>
<div class="container">
  <div class="row">
    <div class="col-sm-12"><h1>Bid Processes</h1></div>
  </div>

<table class="table table-bordered" width="50">
  <thead>
    <tr>
      <th>Bid</th>
      <th>Bidder</th>
      <th>Price (RM)</th>
      <th>Bidding time</th>
    </tr>
  </thead>

  <tbody>
    <% @bid_processes.each do |bid_process| %>
      <tr>
        <td><%= bid_process.bid.id %></td>
        <td><%= bid_process.bidder.name %></td>
        <td><%= bid_process.price %></td>
        <td><%= bid_process.created_at %></td>

        <% if bidder_signed_in? and bid_process.bidder==current_bidder %>
          
          <% if Time.now > bid_process.bid.start_time and Time.now < bid_process.bid.end_time %>
          <td><%= link_to 'Bid Now', new_bid_process_path(bid_id: bid_process.bid.id)%></td>
          <% end %>

        <td><%= link_to 'Show', bid_process %></td>
        <td><%= link_to 'Destroy', bid_process, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
</center>
