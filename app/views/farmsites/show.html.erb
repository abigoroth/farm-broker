      <form>
        <div class="input-group">
          <div class="input-group-btn">
            <button class="btn btn-default">+1</button><button class="btn btn-default"><i class="glyphicon glyphicon-share"></i></button>
          </div>
          <input type="text" class="form-control" placeholder="Add a comment..">
        </div>
      </form>

    </div>
  </div>
  <!-- end left --> 
</div>





<!-- right --> 
<div class="row">
  <div class="col-sm-6"></div>

  <!-- first --> 
  <div class="col-sm-5">
    <div class="panel panel-default">
      <div class="panel-heading"><center><h4><%= @farmsite.farmsitename %></h4></center></div>
      <div class="panel-body">
        <p>
          <strong>Size: </strong><%= @farmsite.farmsitesize %>
          <br><strong>Address: </strong><%= @farmsite.farmsiteaddress %>
          <br><strong>Owner: </strong><%= @farmsite.farmsiteownername %>
          <br><strong>Phone No: </strong><%= @farmsite.farmsiteownerphoneno %>
          <br>
        </p>

      </div>
    </div>

    <!-- second --> 

    <div class="panel panel-default">
      <div class="panel-body">
        <p class="lead">Produces</p>

click on image to view details
<br>
        <% @farmsite.produces.each do |produce| %>
        <a href="<%= produce_path(id: produce.id) %>" height="42" width="42"><%= image_tag produce.avatar.url (:medium)%>
        <% end %>
        
        
    </div>
  </div>

  <!-- end right --> 
</div>


<div class="row">
  <div class="col-sm-6"></div>

  <!-- first --> 
  <div class="col-sm-5">
    <div class="panel panel-default">
      <div class="panel-heading"><h4>Location of the produce</h4></div>
      <div class="panel-body">
       
  <center>
    <div style='width: 100%;'>
       <div style='length: 100%;'>
      <div id="multi_markers" style='width: 600px; height: 400px;'></div>
    </div></center>

    <script >
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: {id: 'multi_markers'}}, function(){
        var markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
      });

    </script>
      </div>
    </div>


  </div>

