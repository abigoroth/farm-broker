  <div class="col-sm-1"></div>
  <!-- first --> 
  <div class="col-sm-5">

    <div class="panel panel-default">
      <div class="panel-thumbnail"><img src="http://www.americangrownflowers.org/wp-content/uploads/2015/08/Barn-Buttons-930x4261.jpg" class="img-responsive"></div>
    </div>


    <!-- second --> 
    <div class="panel panel-default">
     <div class="panel-heading"></a> <h4>Review</h4></div>
