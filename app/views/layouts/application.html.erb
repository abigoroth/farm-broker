
<!DOCTYPE html>
<html>

<head>




	<title>Localhost Livestocks Auctions</title>
	<%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>



	<script src="//maps.google.com/maps/api/js?key=AIzaSyCOealGUq1fv1KL0l5QleToE83Acpxi60o"></script>
	<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
	<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
	<style>
		.container{
			min-height: 450px;

		}
		.navbar {
			margin-bottom: 0;
			border-radius: 0;
		}
		footer {
			background-color: #f2f2f2;
			padding: 25px;
		}
		/* Remove the navbar's default margin-bottom and rounded borders */
		.carousel-inner img {
			width: 100%; /* Set width to 100% */
			margin: auto;
			min-height:200px;
		}

		/* Hide the carousel text when the screen is less than 600 pixels wide */
		@media (max-width: 600px) {
			.carousel-caption {
				display: none;
			}
		}
	</style>

	<!-- Modal -->
    <div class="modal fade" id="modal" role="dialog">
      <div class="modal-dialog">
      </div>
    </div>

</head>
<body>
	<!--Navigation Bar Here -->
	<nav class="navbar navbar-inverse">
		<div class="container-fluid">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="<%= root_path%>" >Localhost Farm</a>
			</div>
			<div class="collapse navbar-collapse" id="myNavbar">
				<ul class="nav navbar-nav">
					<li class="active"><a href="<%= root_path  %>">Home</a></li>
					<li><a href="<%= home_about_path %>">About</a></li>
					<li><a href="<%= home_contact_path %>">Contact</a></li>
					<li><a href="<%= home_news_path %>">Auction News</a></li>
					<li><a href="<%= farmsites_path %>">Farm Sites</a></li>
					<li><a href="<%= bids_path %>">Bids</a></li>

				</ul>

				<ul class="nav navbar-nav navbar-right">
					<% if !bidder_signed_in? and !broker_signed_in? and !user_signed_in? %>
					<li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a>
						<ul class="dropdown-menu">
							<li><a href="<%= new_bidder_registration_path %>">Bidder</a></li>
							<li><a href="<%= new_broker_registration_path %>">Broker</a></li>
							<li><a href="<%= new_user_registration_path %>">User</a></li>
						</ul>
					</li>

					<li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-log-in"></span> Sign In</a>
						<ul class="dropdown-menu">
							<li><a href="<%= new_bidder_session_path %>">Bidder</a></li>
							<li><a href="<%= new_broker_session_path %>">Broker</a></li>
							<li><a href="<%= new_user_session_path %>">User</a></li>
						</ul>
					</li>
				</ul>
				<%end%>
				<%if bidder_signed_in? %>
				<li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Bidder: <%= current_bidder.name %></a>
					<ul class="dropdown-menu">
						<li><a href="/bidder_views/index">My Profile</a></li>

					</ul>
				</li>
				<li><%= link_to 'Sign Out', destroy_bidder_session_path, :method=> :delete %></li>
				<%end%>
				<%if broker_signed_in? %>
				<li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Broker: <%= current_broker.name %></a>
					<ul class="dropdown-menu">
						<li><a href="/broker_views/index">My Profile</a></li>
						<li><a href="/farmsites?broker_id=<%= current_broker.id if current_broker %>"> My Farm</a></li>
						<li><a href="/bids?broker_id=<%= current_broker.id if current_broker %>"> My Bid</a></li>
					</ul>
				</li>
				<li><%= link_to 'Sign Out', destroy_broker_session_path, :method=> :delete %></li>
				<%end%>
				<%if user_signed_in? %>
				<li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Session: <%= current_user.name %></a>
					<ul class="dropdown-menu">
						<li><a href="<%= user_views_profile_path(id: current_user.id) %>">My Profile</a></li>
					</ul>
				</li>
				<li><%= link_to 'Sign Out', destroy_user_session_path, :method=> :delete %></li>
				<%end%>
			</ul>
		</div>
	</div>
</nav>



<!--Please use div class container in your page so it come out perfect!-->

<%= content_tag(:div, flash[:alert], :id => "flash_alert", class: 'alert alert-danger') if flash[:alert] %>
<%= content_tag(:div, flash[:notice], :id => "flash_notice", class: 'alert alert-success') if flash[:notice] %>

<%= yield %>
<!--footer -->
<footer class="container-fluid text-center">
	<p>2016@LocalhostSdnBhd</p>
</footer>
<!--footer-->
</body>

</html>
