<div class="container">
  <br>
  <div class="row">
      <div class="col-xs-3">
          <div class="panel panel-default">
            <div class="panel-heading"><center><strong><%= @user.name %></strong></center></div>
            <div class="panel-body">
              <center><div class="photo"><img src="<%= @user.profilephoto %>" style="width:150px; height:150px; border-radius: 90px">
                <% if !@user.profilephoto.blank? %><br><a href="<%= remove_user_photo_path(@user.id) %>" \>Remove Photo</a><% end %>
              <br><br><strong style="text-transform:capitalize"><%= @user.role %></strong></div></center>
              <br>
              <table class="table">
                <tr>
                <th>Name: </th>
                <td><%= @user.name %></td>
              </tr>
              <tr>
              <th>Email: </th>
              <td><%= @user.email %></td>
              </tr>
              <tr>
              <th>Date Of Birth: </th>
              <td><%= @user.birth_date %></td>
              </tr>
              <tr>
              <th>Address: </th>
              <td><%= @user.address %></td>
              </tr>
              <tr>
              <th>Phone no:</th>
              <td><%= @user.phone_no %></td>
              </tr>
              <tr>
              <td colspan="2" align="right"><a href="<%= edit_user_registration_path %>" class="btn btn-primary" style="color:white"><span class="glyphicon glyphicon-pencil"></span>&nbsp;Edit Profile</a></td>
              </tr>
              </table>
            </div>
          </div>
      </div>
      <!--Status -->
      <div class="col-xs-6">
        <%if @user.id == current_user.id %>
        <div class="row">
            <div class="col-xs-12">
            <div class="panel panel-default">
              <div class="panel-heading">Status</div>
              <div class="panel-body">
                <textarea name="status" placeholder="What's on your mind?" class="form-control"></textarea>
                <br>
                <div align="right"><input type="submit" name="submit" value="Post" class="btn btn-primary" /></div>
              </div>
            </div>
          </div>
        </div>
        <%end%>
        <!--Status -->
        <div class="row">
            <div class="col-xs-12">
            <div class="panel panel-default">
              <div class="panel-heading">Wall Post</div>
              <div class="panel-body">
                <p>Nothing here. Make a post now!</p>
              </div>
            </div>
          </div>
        </div>

      </div>
      <!--Wall -->
      <!--Box -->
      <div class="col-xs-3">
        <div class="row">
          <div class="col-xs-12">
            <div class="panel panel-default">
              <div class="panel-heading">Friends</div>
              <div class="panel-body">
                No Friend :( .<br><a href="#">Add Now!</a>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <div class="panel panel-default">
              <div class="panel-heading">Messages</div>
              <div class="panel-body">
                No message.
              </div>
            </div>
          </div>
        </div>
        <div class="row">
        </div>
      </div>
      <!--Box -->
  </div>
</div>
