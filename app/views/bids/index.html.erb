<center>
<p id="notice"><%= notice %></p>

<h1>Bids</h1>

<table class="table table-bordered" width="50">
  <thead>
    <tr>
      <th>Bid status</th>
      <th>Day</th>
      <th>Date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Start price</th>
      <th>Highest price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.bid_status %></td>
        <td><%= bid.day %></td>
        <td><%= bid.date %></td>
        <td><%= bid.start_time %></td>
        <td><%= bid.end_time %></td>
        <td><%= bid.start_price %></td>
        <td><%= bid.highest_price %></td>
        <td><%= link_to 'Show', bid %></td>
        <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
        <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bid', new_bid_path %>
</center>