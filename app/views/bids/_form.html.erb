<%= simple_form_for(@bid) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :bid_status, as: :select, collection: ["On", "Off"], include_blank: false%>
    <%= f.input :day %>
    <%= f.input :date %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :start_price %>
    <%= f.input :highest_price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>